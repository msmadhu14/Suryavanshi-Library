@model IEnumerable<SuryavanshiLibrary.Models.Book>

@{
    ViewData["Title"] = "Search";
}

<h1>Search Book</h1>
<hr />
<div>
    <a asp-action="Index">Back to List</a> &nbsp; &nbsp;
    <a asp-action="BookManagement">Back to Book</a>
</div>
<hr />
<p>
    @using (Html.BeginForm("Search", "Books", FormMethod.Get))
    {
        <div>
            <b>Search By:</b>
            @Html.RadioButton("SearchBook", "ISBN") <text>ISBN</text>
            @Html.RadioButton("SearchBook", "Title", true) <text>Name</text>
            @Html.RadioButton("SearchBook", "PublisherId") <text>Publisher</text>
            @Html.RadioButton("SearchBook", "AuthorId") <text>Author</text>
        </div><br />
        <div>
            @Html.TextBox("Search")
            <input type="submit" value="Search" />
        </div>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssuedStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7"> No Data Found!!!</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublisherId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IssuedStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ISBN">Details</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
